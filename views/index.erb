<% if session[:error] %>
  <p><%= session.delete(:error) %></p>
<% end %>

<% if session[:success] %>
  <p><%= session.delete(:success) %></p>
<% end %>

<ul>
  <% @files.each do |name| %>
    <li>
    	<a href="/<%= name %>"><%= name %></a>
    	<a href="/<%= name %>/edit">Edit</a>
    </li>
  <% end %>
</ul>